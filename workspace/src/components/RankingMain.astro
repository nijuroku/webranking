---
import Table from './Table.astro';
---

<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h2 class="text-2xl font-bold text-gray-900">
      <i class="fas fa-trophy mr-2"></i> Ranking Main
    </h2>
    <div class="flex gap-3">
      <button id="refreshMain" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        <i class="fas fa-sync-alt mr-2"></i> Actualizar
      </button>
      <button id="exportMain" class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
        <i class="fas fa-download mr-2"></i> Exportar
      </button>
    </div>
  </div>

  <!-- Table -->
  <Table>
    <thead>
      <tr>
        <th>#</th>
        <th>TAG</th>
        <th>Usuario</th>
        <th>Equipo</th>
        <th>Puntos</th>
        <th>Tendencia</th>
      </tr>
    </thead>
    <tbody id="tbodyMain">
      <tr>
        <td colspan="6" class="text-center py-8 text-gray-500">
          <i class="fas fa-spinner-third spin-slow mr-2"></i> Cargando ranking...
        </td>
      </tr>
    </tbody>
  </Table>
</div>
